from __future__ import print_function
import sys
import os, os.path

HEREPATH = os.path.abspath(os.path.dirname(__file__))

if __name__ == '__main__':
    sys.path.append(os.path.join(HEREPATH, os.pardir, "src"))
    from fsource.__main__ import main
    main()
